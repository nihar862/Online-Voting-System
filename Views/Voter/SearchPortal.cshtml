
@model IEnumerable<OVS.Models.Candidate>
@{
    ViewBag.Title = "Home";
}


    <table>
            <tr>
                <td>
                    @Html.ActionLink("Start Voting Event", "VotingStart", "VotingEvent", new { @class = "btn btn-success" , @onclick = "startVote()" })
                </td>
                <td>
                    @Html.ActionLink("End Voting ", "VotingEnd", "VotingEvent", new { @class = "btn btn-danger" , @style ="margin-left :10px" , @onclick= "endVote()" })
                </td>
                <td>
                    @Html.ActionLink("Reset ", "Reset", "VotingEvent", new { @class = "btn btn-primary", @style = "margin-left :60px" ,@onclick="reset()"})
                </td>
           </tr>
    </table>
<br />
<br />

<form class="form-inline text-center" method="get">

    <div class="form-group">
        <input type="text" name="name" placeholder="Enter Party Name" class="form-control" style="margin-right:10px">
    </div>
    <div class="form-group">
        <input type="text" name="search" placeholder="Enter Position" class="form-control" style="margin-right:10px">
    </div>
    <div class="form-group">
        <input type="text" name="cat" placeholder="Enter City" class="form-control" style="margin-right:10px">
    </div>

    <div class="form-group">
        <input type="submit" name="submit" value="search" class="btn btn-info">
    </div>
</form>

<br/><br/><br/>

@if (Model.Count() == 0)
{
     <h4>
         Item not Found
     </h4>
}
else
{
    <table class="table">
        <tr>
            <th>
                @Html.DisplayName("Party Name")
            </th>
            <th>
                @Html.DisplayName("Candidate Position")
            </th>
            <th>
                @Html.DisplayName("City")
            </th>

        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Party.Motto)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Position)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.City)
                </td>
               
            </tr>
        }
    </table>
}
<script>
    function startVote() {
        alert("Voting Event Started");
    }

    function endVote() {
        alert("Voting Event Ended");
    }

    function reset() {
        alert("Vote count Reseted");
    }
</script>
