<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title</title>
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/modernizr-2.6.2.js"></script>
</head>
<body>
    
        
            <nav class="navbar navbar-expand-md bg-dark navbar-dark">
               
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#collapsibleNavbar">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="collapsibleNavbar">
                    <ul class="navbar-nav" style="margin-left:5%;margin-right:10%">
                        <li class="nav-item">
                            <a class="nav-link" href="#">  </a>
                        </li>
                        @if (User.Identity.IsAuthenticated && Session["VoterId"] != null)
                        {
                        
                        <li class="nav-item">             
                            <a class="nav-link" href="#">@Html.ActionLink("Vote", "VotingPortal", "Voter", new { area = "" }, new { @class = "navbar-brand" ,@style="margin-right:30px" })</a>
                        </li> 
                        <li class="nav-item">
                            <a class="nav-link" href="#">@Html.ActionLink("Voters", "VoterList", "Registration", new { area = "" }, new { @class = "navbar-brand", @style = "margin-right:30px" })</a>
                        </li>
                            //if (User.IsInRole("Voter"))
                            //{
                                <li class="nav-item">
                                    <a class="nav-link" href="#">@Html.ActionLink("Result ", "DeclareResult", "VotingEvent", new { @class = "navbar-brand", @style = "margin-right:30px" })</a>
                                </li>
                            //}
                            if (User.IsInRole("Admin"))
                            {
                                <li class="nav-item">
                                    <a class="nav-link" href="#">@Html.ActionLink("Candidates", "Index", "Candidate", new { area = "" }, new { @class = "navbar-brand", @style = "margin-right:30px" })</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">@Html.ActionLink("Party", "Index", "Party", new { area = "" }, new { @class = "navbar-brand", @style = "margin-right:30px" })</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link" href="#">@Html.ActionLink("Admin Panel", "SearchPortal", "Voter", new { area = "" }, new { @class = "navbar-brand", @style = "margin-right:30px" })</a>
                                </li>
                            }
                            <li class="nav-item" style="margin-left:105%">
                                <a class="nav-link" href="#">@Html.ActionLink("Logout", "Logout", "Login", new { area = "" }, new { @class = "navbar-brand" })</a>
                            </li>
                        }
                    </ul>
                </div>
            </nav>
            <br/>
    <br/>
      
    

    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Online Voting System</p>
        </footer>
    </div>

    <script src="~/Scripts/jquery-1.10.2.min.js"></script>
    <script src="~/Scripts/bootstrap.min.js"></script>
</body>
</html>